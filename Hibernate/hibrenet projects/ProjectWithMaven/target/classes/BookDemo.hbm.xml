<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping.dtd">
<hibernate-mapping>
    <class name="com.XmlMapping.BookDemo" table="Bookdemo" >
     <id name="id" column="book_Id" type="int">
         <generator class="native" ></generator>
     </id>
        <property name="book_Name" column="book_Name_data" type="string"/>
        <property name="book_Author" column="book_Author_data" type="string"/>
    </class>
</hibernate-mapping>