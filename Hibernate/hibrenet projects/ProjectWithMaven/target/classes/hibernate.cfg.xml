<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/myhiber</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="format_sql">true</property>
        <property name="show_sql">ture</property>

<!--     <!-   for caching property-->
        <property name="cache.use_second_level_cache">true</property>
       <property name="cache.region.factory_class">org.hibernate.cache.ehcache.internal.EhcacheRegionFactory</property>
       <!-- mapping-->
        <mapping class="com.hiber.config.Student"/>
        <mapping class="com.hiber.config.Address"/>
        <mapping class="com.hiber.config.Emp"/>
        <mapping class="com.hiber.config.EmpAddress"/>
        <!-- @Embeddable-->
        <mapping class="com.hiber.config.Certificate"/>
        <!-- one to one mapping classes-->
        <mapping class="com.mapping.Question"/>
        <mapping class="com.mapping.Answer"/>
        <!--       practice ex one to one mapping classes-->
        <mapping class="com.mapping.practiceEx.Student"/>
        <mapping class="com.mapping.practiceEx.Teacher"/>
        <!--       practice ex one to one mapping classes-->
        <mapping class="com.mapping.practiceEx.Employee"/>
        <mapping class="com.mapping.practiceEx.EmpComp"/>
        <!--    one to many and many to one mapping classes-->
        <mapping class="com.mapping.m212m.Question"/>
        <mapping class="com.mapping.m212m.Answer"/>
        <!--       practice ex one to many and many to one mapping classes-->
        <mapping class="com.mapping.m212m.practice.User"/>
        <mapping class="com.mapping.m212m.practice.Account"/>
        <mapping class="com.mapping.m212m.practice.SmartPhone"/>
        <mapping class="com.mapping.m212m.practice.MApps"/>
        <!--    many to many mapping classes-->
        <mapping class="com.mapping.M2M.EMP_Demo"/>
        <mapping class="com.mapping.M2M.Project_Demo"/>
        <!-- practice ex many to many classes-->
        <mapping class="com.mapping.M2M.Practice.Orders"/>
        <mapping class="com.mapping.M2M.Practice.Products"/>
        <mapping class="com.mapping.M2M.Practice.Books"/>
        <mapping class="com.mapping.M2M.Practice.Authors"/>
<!--fetching technique lazy and eager loading-->
        <mapping class="com.mapping.fetchingType.Answer"/>
        <mapping class="com.mapping.fetchingType.Question"/>
        <!--hibernate life cycle ex:  -->
        <mapping class="com.lifecyclestate.Student"/>
        <!-- HIBERNATE HQL-->
        <mapping class="com.HQL.StudentHQL"/>

        <!-- mapping using xml file-->
        <mapping file="src/main/resources/Person.hbm.xml"/>
        <mapping file="src/main/resources/BookDemo.hbm.xml"/>
    </session-factory>
</hibernate-configuration>